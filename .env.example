# Database Configuration
DATABASE_URL=sqlite:///./physioclinic.db
# For PostgreSQL use: postgresql://user:password@localhost/dbname
# For MySQL use: mysql://user:password@localhost/dbname

# Security
SECRET_KEY=your-secret-key-change-this-in-production-min-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Server Configuration
API_V1_PREFIX=/api/v1
PROJECT_NAME=PhysioClinic API
VERSION=1.0.0
DEBUG=True

# CORS - Add your Android app URL
BACKEND_CORS_ORIGINS=["*"]

# Email Configuration (Optional - for production)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
EMAILS_FROM_EMAIL=noreply@physioclinic.com
EMAILS_FROM_NAME=PhysioClinic

# File Upload (Optional)
MAX_FILE_SIZE=10485760
UPLOAD_FOLDER=./uploads
